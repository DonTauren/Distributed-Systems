<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minWidth="350.0" spacing="5.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx.controller.EnergyGuiController">
<padding>
  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
</padding>
<VBox spacing="5.0">
  <VBox.margin>
    <Insets bottom="20.0" />
  </VBox.margin>
  <Label fx:id="labelCommunityPool" text="Community Pool" />
  <Separator />
  <Label fx:id="labelGridPortion" text="Grid Portion" />
</VBox>
<Button mnemonicParsing="false" onAction="#onRefresh" text="refresh" />
<Separator prefWidth="200.0">
  <VBox.margin>
    <Insets top="10.0" />
  </VBox.margin>
</Separator>
<GridPane>
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="108.0" minWidth="10.0" prefWidth="103.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="99.0" minWidth="10.0" prefWidth="97.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="400.0" minHeight="16.0" prefHeight="26.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="255.0" minHeight="0.0" prefHeight="24.0" vgrow="SOMETIMES" />
  </rowConstraints>
  <padding>
    <Insets bottom="10.0" top="10.0" />
  </padding>
  <Label text="Start" />
  <Label text="End" GridPane.rowIndex="1" />
  <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
    <DatePicker fx:id="dpStart" minWidth="120.0" />
    <TextField fx:id="tfStart" minWidth="80.0" promptText="HH:mm:ss" />
  </HBox>
  <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
    <DatePicker fx:id="dpEnd" minWidth="120.0" />
    <TextField fx:id="tfEnd" minWidth="80.0" promptText="HH:mm:ss" />
  </HBox>
</GridPane>
<Button mnemonicParsing="false" onAction="#onShowData" text="show data" />
   <Separator layoutX="20.0" layoutY="128.0" prefWidth="200.0" />
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
      <Label text="Community produced" />
      <Label text="Grid used" GridPane.rowIndex="2" />
      <Label text="Community used" GridPane.rowIndex="1" />
         <Label fx:id="labelCommunityProduced" layoutX="10.0" layoutY="16.0" GridPane.columnIndex="1" />
         <Label fx:id="labelCommunityUsed" layoutX="10.0" layoutY="47.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Label fx:id="labelGridUsed" layoutX="10.0" layoutY="77.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </children>
   </GridPane>
   <Label fx:id="labelErrorMessage" />
</VBox>
